Q3: var horas, dias;

horas = parseInt(prompt("Digite o numero de horas:"));
dias = (horas/24);

alert("Qunatidade em dias: " + dias);
Q4: var metros, polegadas, pés, jardas, milhas;

metros = parseFloat(prompt("Digite o valor em metros:"));
polegadas = (metros*39,37);
pés = (metros*3,28);
jardas = (metros*1,09);
milhas = (metros*0,00062);

alert("Valor em metros: " + metros + "\n" + "Valor em polegadas: " + polegadas + "\n" "Valor em pés: " + pés + "\n" + "Valor em jardas: " + jardas + "\n" + "Valor em milhas: " + milhas);
Q5: var altura, massa, IMC;

altura = parseFloat(prompt("Entre com sua altura:"));
massa = parseFloat(prompt("Digite sua massa em Kg:"));
IMC = massa/(altura*altura)

alert("Seu IMC é: " + IMC);
Q6: var raio, perimetro, area, volume;

raio = parseFloat(prompt("Digite o raio do circulo:"));
PI = 3.14159265;
perimetro = (2*PI*raio);
area = (PI*(raio*raio));
volume = (4*PI*(raio*raio*raio))/3

alert("Perimetro: " + perimetro + "\n" + "Area: " + area + "\n" + "Volume: " + volume);
